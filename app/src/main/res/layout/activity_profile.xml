<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ActivityMaintain.Profile_Activity">
    <include layout="@layout/tool_bar8"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingTop="15dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_gravity="center"
            android:id="@+id/hinhanhquanli"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/a"
            />
        <TextView
            android:id="@+id/tv_ten"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Long Duy"
            android:textStyle="bold"
            android:textSize="30dp"
            android:textColor="@color/blue"
            android:gravity="center"
            />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/item_ttnd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:layout_marginTop="20dp"
        android:background="?android:attr/selectableItemBackground"
        android:layout_gravity="center_vertical"
        >
        <ImageView
            android:background="@drawable/khungbackprofile2"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:padding="5dp"
            android:src="@drawable/nguoi"
            android:layout_marginRight="20dp"
            />
        <TextView
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Thông Tin người dùng"
            android:textSize="18dp"

            />
    </LinearLayout>
    <LinearLayout
        android:background="?android:attr/selectableItemBackground"
        android:id="@+id/item_tb"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:layout_marginTop="20dp"
        android:layout_gravity="center_vertical"
        >
        <ImageView
            android:background="@drawable/khungbackprofile3"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:padding="5dp"
            android:src="@drawable/ic_baseline_golf_course_24"
            android:layout_marginRight="20dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Khám phá cùng MyVnTour"
            android:textSize="18dp"
            android:layout_gravity="center"
            />
    </LinearLayout>
    <LinearLayout
        android:background="?android:attr/selectableItemBackground"
        android:id="@+id/item_bookmark"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:layout_marginTop="20dp"
        android:layout_gravity="center_vertical"
        >
        <ImageView
            android:background="@drawable/khungbackprofile4"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:padding="5dp"
            android:src="@drawable/ic_favorite"
            android:layout_marginRight="20dp"
            />
        <TextView
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Khách sạn yêu thích "
            android:textSize="18dp"

            />
    </LinearLayout>
    <LinearLayout
        android:background="?android:attr/selectableItemBackground"
        android:id="@+id/item_share"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:layout_marginTop="20dp"
        android:layout_gravity="center_vertical"
        >
        <ImageView
            android:background="@drawable/khungbackprofile5"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:padding="5dp"
            android:src="@drawable/ic_share"
            android:layout_marginRight="20dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Giới thiệu bạn bè "
            android:textSize="18dp"
            android:layout_gravity="center"
            />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="30dp"
        android:background="@android:color/darker_gray"
        />
    <LinearLayout
        android:background="?android:attr/selectableItemBackground"
        android:id="@+id/item_phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:layout_marginTop="20dp"
        android:layout_gravity="center_vertical"
        >
        <ImageView
            android:padding="5dp"
            android:src="@drawable/ic_support_agent"
            android:layout_width="38dp"
            android:layout_height="38dp"
            android:background="@drawable/khungbackprofile"
            android:layout_marginRight="20dp"
            />
        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hotline 24/7: "
            android:textSize="18dp"
            android:layout_gravity="center"
            />
        <TextView
            android:layout_gravity="center"
            android:id="@+id/tv_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1900 0000"
            android:textSize="18dp"
            android:textStyle="bold"
            android:textColor="@color/black"
            />
    </LinearLayout>
    <LinearLayout
        android:background="?android:attr/selectableItemBackground"
        android:id="@+id/item_vntour"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:layout_marginTop="20dp"
        android:layout_gravity="center_vertical"
        >
        <ImageView
            android:padding="5dp"
            android:src="@drawable/ic_baseline_group_24"
            android:layout_width="38dp"
            android:layout_height="38dp"
            android:background="@drawable/khungbackprofile"
            android:layout_marginRight="20dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Về MyVnTour "
            android:textSize="18dp"
            android:layout_gravity="center"
            />
    </LinearLayout>
    <LinearLayout
        android:background="?android:attr/selectableItemBackground"
        android:id="@+id/item_cs"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:layout_marginTop="20dp"
        android:layout_gravity="center_vertical"
        >
        <ImageView
            android:padding="5dp"
            android:src="@drawable/ic_baseline_phonelink_lock_24"
            android:layout_width="38dp"
            android:layout_height="38dp"
            android:background="@drawable/khungbackprofile"
            android:layout_marginRight="20dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Chính sách bảo mật "
            android:textSize="18dp"

            android:layout_gravity="center"
            />
    </LinearLayout>
    <LinearLayout
        android:background="?android:attr/selectableItemBackground"
        android:id="@+id/item_ph"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:layout_marginTop="20dp"
        android:layout_gravity="center_vertical"
        >
        <ImageView
            android:padding="5dp"
            android:src="@drawable/ic_baseline_message_24"
            android:layout_width="38dp"
            android:layout_height="38dp"
            android:background="@drawable/khungbackprofile"
            android:layout_marginRight="20dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Gửi phản hồi "
            android:textSize="18dp"
            android:layout_gravity="center"
            />
    </LinearLayout>
    <LinearLayout
        android:background="?android:attr/selectableItemBackground"
        android:id="@+id/item_dx"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:layout_marginTop="20dp"
        android:layout_gravity="center_vertical"
        >
        <ImageView
            android:padding="5dp"
            android:src="@drawable/ic_baseline_exit_to_app_24"
            android:layout_width="38dp"
            android:layout_height="38dp"
            android:background="@drawable/khungbackprofile"
            android:layout_marginRight="20dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Đăng xuất  "
            android:textSize="18dp"
            android:layout_gravity="center"
            />
    </LinearLayout>
</LinearLayout>