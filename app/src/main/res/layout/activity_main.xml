<?xml version="1.0" encoding="utf-8"?>
<nl.psdcompany.duonavigationdrawer.views.DuoDrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/drawer"
    tools:context=".ActivityMaintain.MainActivity">

    <nl.psdcompany.duonavigationdrawer.views.DuoMenuView xmlns:app="http://schemas.android.com/apk/res-auto"
        android:tag="menu"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:gravity="center_vertical"
            android:background="@color/blue"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:padding="10dp"
                android:background="@drawable/khungitemmenu"
                android:id="@+id/itemHome"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/ivHome"
                    android:layout_marginLeft="21dp"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/ic_outline_home_24"/>
                <TextView
                    android:textSize="16dp"
                    android:layout_marginLeft="20dp"
                    android:layout_gravity="center"
                    android:textColor="@color/white"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Trang Chủ"/>


            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="15dp"
                android:padding="10dp"
                android:background="@drawable/khungitemmenu"
                android:id="@+id/itemProfile"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/ivProfile"
                    android:layout_marginLeft="21dp"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/ic_outline_person_outline_24"/>
                <TextView
                    android:textSize="16dp"
                    android:layout_marginLeft="20dp"
                    android:layout_gravity="center"
                    android:textColor="@color/white"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Hồ Sơ"/>


            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="15dp"
                android:padding="10dp"
                android:background="@drawable/khungitemmenu"
                android:id="@+id/idNearby"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/ivNEaby"
                    android:layout_marginLeft="21dp"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/ic_outline_where_to_vote_24"/>
                <TextView
                    android:textSize="16dp"
                    android:layout_marginLeft="20dp"
                    android:layout_gravity="center"
                    android:textColor="@color/white"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Gần Tôi"/>


            </LinearLayout>
            <View
                android:layout_marginTop="15dp"
                android:layout_marginHorizontal="30dp"
                android:layout_width="250dp"
                android:layout_height="0.5dp"
                android:background="@color/white" />
            <LinearLayout
                android:layout_marginTop="15dp"
                android:padding="10dp"
                android:background="@drawable/khungitemmenu"
                android:id="@+id/itemBookmark"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/tvBookmark"
                    android:layout_marginLeft="21dp"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/ic_baseline_bookmark_border_24_menu"/>
                <TextView
                    android:textSize="16dp"
                    android:layout_marginLeft="20dp"
                    android:layout_gravity="center"
                    android:textColor="@color/white"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Đã Lưu"/>


            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="15dp"
                android:padding="10dp"
                android:background="@drawable/khungitemmenu"
                android:id="@+id/itemNotification"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/ivNotification"
                    android:layout_marginLeft="21dp"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/ic_outline_fiber_new_24"/>
                <TextView
                    android:textSize="16dp"
                    android:layout_marginLeft="20dp"
                    android:layout_gravity="center"
                    android:textColor="@color/white"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tour Khám Phá"/>


            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="15dp"
                android:padding="10dp"
                android:background="@drawable/khungitemmenu"
                android:id="@+id/itemMessage"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/ivMessage"
                    android:layout_marginLeft="21dp"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/ic_outline_receipt_long_24"/>
                <TextView
                    android:textSize="16dp"
                    android:layout_marginLeft="20dp"
                    android:layout_gravity="center"
                    android:textColor="@color/white"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Hóa Đơn"/>


            </LinearLayout>
            <View android:layout_marginTop="15dp"
                android:layout_marginHorizontal="30dp"
                android:layout_width="250dp"
                android:layout_height="0.5dp"
                android:background="@color/white" />
            <LinearLayout
                android:layout_marginTop="15dp"
                android:padding="10dp"
                android:background="@drawable/khungitemmenu"
                android:id="@+id/itemSettings"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/ivSetting"
                    android:layout_marginLeft="21dp"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/ic_outline_settings_24"/>
                <TextView
                    android:textSize="16dp"
                    android:layout_marginLeft="20dp"
                    android:layout_gravity="center"
                    android:textColor="@color/white"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Cài Đặt"/>


            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="15dp"
                android:padding="10dp"
                android:background="@drawable/khungitemmenu"
                android:id="@+id/itemHelp"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/ivRevenue"
                    android:layout_marginLeft="21dp"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/ic_outline_help_outline_24"/>
                <TextView
                    android:textSize="16dp"
                    android:layout_marginLeft="20dp"
                    android:layout_gravity="center"
                    android:textColor="@color/white"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Hỗ trợ"/>


            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="15dp"
                android:padding="10dp"
                android:background="@drawable/khungitemmenu"
                android:id="@+id/itemLogout"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/ivLogout"
                    android:layout_marginLeft="21dp"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/ic_round_power_settings_new_24"/>
                <TextView
                    android:textSize="16dp"
                    android:layout_marginLeft="20dp"
                    android:layout_gravity="center"
                    android:textColor="@color/white"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Đăng Xuất"/>


            </LinearLayout>

        </LinearLayout>
    </nl.psdcompany.duonavigationdrawer.views.DuoMenuView>



    <LinearLayout
        android:background="@color/white"
        android:tag="content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <include layout="@layout/tool_bar"
            />
        <FrameLayout
            android:id="@+id/frame_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </LinearLayout>
</nl.psdcompany.duonavigationdrawer.views.DuoDrawerLayout>